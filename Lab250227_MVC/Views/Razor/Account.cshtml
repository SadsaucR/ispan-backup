@{
	var xa = ViewBag.UserName;
	var xb = ViewBag.UserSex;
	var xc = ViewBag.UserAddr;
}
<p>  @ViewBag.UserName;    </p>

<p>  @ViewBag.UserSex;   </p>

<p>  @ViewBag.UserAddr;   </p>
<hr />
<span>姓名:</span>
<input type="text" id="Username" value="@xa" />
<br>
<span>性別:</span>
<input type="radio" id="Male" name="sex" value="M" @(xb == "M" ? "checked" : "unchecked")>男生
<input type="radio" id="Female" name="sex" value="F" @(xb == "F" ? "checked" : "unchecked")>女生
<br>
<label>居住地:</label>
<select name="live" id="Live">
	<option value="TPE" selected="@Html.Raw(xc == "TPE" ? "selected" : "")">台北</option>
	<option value="TCH" selected="@Html.Raw(xc == "TCH" ? "selected" : "")">台中</option>
	<option value="TNN" selected="@Html.Raw(xc == "TNN" ? "selected" : "")">台南</option>
</select>
<hr />